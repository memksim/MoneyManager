<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_light</item>
        <item name="colorPrimaryVariant">@color/main_variant_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="walletStyle">@style/DefaultWalletStyle</item>
    </style>

    <style name="DefaultWalletStyle">
        <item name="walletCoverColor">@color/main_light</item>
        <item name="allTextColor">@color/white</item>
        <item name="paymentSystemDrawable">@drawable/ic_mir_light</item>
    </style>

</resources>